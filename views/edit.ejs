<% include ./partials/header %>

<div class="container">
    <div class = >
        <h1 class="formHead">Edit Your Campground</h1>
        <div class = "formContain">
            <form action="/spaces/<%= space._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="space[name]" value = "<%= space.name %>">
                </div>
            
                <div class="form-group">
                    <input class="form-control" type="text" name="space[img]" value = "<%= space.img %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="space[description]" value = "<%= space.description %>">
                </div>
                
                <input class= "btn btn-primary btn-large btn-block" type="submit" class = "btn btn-primary">
            </form>
            <a href="/spaces" >Return to Safe Spaces</a>
        </div>
    </div>
</div>
